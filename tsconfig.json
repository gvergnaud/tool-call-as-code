{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "lib": ["ES2020", "es2021", "es2022", "es2023", "es2024"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
